    }
  include ../../components/home/i-main-banner
  include ../../components/home/i-title-section
  include ../../components/home/i-hits-section
  include ../../components/home/i-preview-section
  include ../../components/home/i-category-blocks
  +categorySection('left', categorySection.title, categorySection.description, categorySection.items)
  +categorySection('right', categorySection.title, categorySection.description, categorySection.items)
  include ../../components/home/category/i-category-about
