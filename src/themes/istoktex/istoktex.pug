extends ../../layouts/themes/i-layout

include ../../mixins/category/i-category-block
include ../../mixins/category/i-category-section

block styles
  link(rel="stylesheet" href="../../styles/themes/i-theme.css")
  link(rel="stylesheet" href="../../styles/base/i-typography.css")
  link(rel="stylesheet" href="../../styles/components/header/i-header.css")
  link(rel="stylesheet" href="../../styles/components/footer/i-footer.css")
  link(rel="stylesheet" href="../../styles/components/home/i-main-banner.css")
  link(rel="stylesheet" href="../../styles/components/home/i-preview-section.css")
  link(rel="stylesheet" href="../../styles/components/home/i-title-section.css")
  link(rel="stylesheet" href="../../styles/components/home/i-hits-section.css")
  link(rel="stylesheet" href="../../styles/components/home/i-category-blocks.css")
  link(rel="stylesheet" href="../../styles/components/home/i-category.css")

block main
  -
    const categorySection = {
      title: 'Собственное производство ',
      description: 'Собственное производство — наша главная сила. Мы не перекупаем, а производим упаковку сами: это значит, что вы получаете стабильное качество, оперативное выполнение тиражей и возможность доработки под ваш бренд.',
