extends ../../layouts/themes/s-layout

include ../../mixins/provider
include ../../mixins/services/s-card

block styles
  link(rel="stylesheet" href="../../styles/themes/s-theme.css")
  link(rel="stylesheet" href="../../styles/themes/s-typography.css")
  link(rel="stylesheet" href="../../styles/components/header/s-header.css")
  link(rel="stylesheet" href="../../styles/components/footer/s-footer.css")
  link(rel="stylesheet" href="../../styles/components/card-button/s-card-button.css")
  link(rel="stylesheet" href="../../styles/components/breadcrumbs/s-breadcrumbs.css")
  link(rel="stylesheet" href="../../styles/components/pagination/s-pagination.css")
  link(rel="stylesheet" href="../../styles/components/services/s-page.css")
  link(rel="stylesheet" href="../../styles/components/services/s-card.css")

block main
  -
    const path = ['Магазин мужской одежды', 'услуги'];

    const cards = [
      { title: 'Шелкография', href: '#' },
      { title: 'Сублимация Сублимация Сублимация Сублимация Сублимация Сублимация', href: '#' },
      { title: 'Тиснение', href: '#' },
      { title: 'Термотрансфер', href: '#' },
      { title: 'РУчная фасовка', href: '#', cols: 2 },
      { title: 'РУчная фасовка', href: '#', cols: 2 },
    ];

  div.services
    div.services__container.container
      div.services__wrapper
        div.services__top
          +breadcrumbs(path)
          h1.services__title.page-title Услуги
        div.services__header.header-services
          h2.header-services__title.services-title Связаться с нами
          div.services-header__link-wrapper
            a.services-header__link(href='#')
              span Обсудить ваш заказ — отправьте заявку
              +icon('s-arrow-down')
        div.services__cards-wrapper
          h2.services__cards-title.services-title Методы нанесения логотипа
          div.services__cards
            each card of cards
              +serviceCard(card, card.cols)