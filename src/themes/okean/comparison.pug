extends ../../layouts/themes/o-layout

include ../../mixins/provider

block styles
  link(rel="stylesheet" href="../../styles/themes/o-theme.css")
  link(rel="stylesheet" href="../../styles/themes/o-typography.css")
  link(rel="stylesheet" href="../../styles/components/header/o-header.css")
  link(rel="stylesheet" href="../../styles/components/header-modal/o-header-modal.css")
  link(rel="stylesheet" href="../../styles/components/footer/o-footer.css")
  link(rel="stylesheet" href="../../styles/components/breadcrumbs/o-breadcrumbs.css")
  link(rel="stylesheet" href="../../styles/components/catalog-slider/o-catalog-slider.css")
  link(rel="stylesheet" href="../../styles/components/comparison/o-filters.css")
  link(rel="stylesheet" href="../../styles/components/comparison/o-card.css")
  link(rel="stylesheet" href="../../styles/components/comparison/o-page.css")

block main
  - const path = ['Магазин обуви', 'сравнить товары'];
  div.comparison
    div.comparison__container.container
      div.comparison__wrapper
        div.comparison__top
          +breadcrumbs(path)
          h1.comparison__title.page-title Сравнение
        div.comparison__filters
          include ../../components/comparison/o-filters
        p.comparison__info Вы пока добавили только один товар.
          br
          | Выберите ещё хотя бы один, чтобы сравнить
        div.comparison__grid
          each item in [0, 1]
            include ../../components/comparison/o-card
